generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum user_type {
  DEALER
  DISTRIBUTOR
  TECHNICIAN
  BACKOFFICE
}

model user {
  user_id          String    @id @default(uuid())
  mobile           String    @unique
  email            String    @unique
  name             String
  business         String?
  gstin            String?
  billing_address  Json?
  shipping_address Json?
  profile_pic      String?
  isApproved       Boolean   @default(false)
  user_type        user_type

  dealer_id   String? // Foreign key to another user
  dealer      user?   @relation("DealerUsers", fields: [dealer_id], references: [user_id])
  teamMembers user[]  @relation("DealerUsers") // Inverse side for the dealer
}
